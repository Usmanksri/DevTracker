<div id="page-content">
  <h1 class="text-center mt-4">Details of task</h1>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= @task.creator.name %>
          </div>

          <div class="card-body">
          <h5 class="card-title"><%= link_to @task.title, class: "text-success" %></h5>
          <p class="card-text">Assigned to: <%= @task.member.name %></p>
          <p class="card-text">Description: <%= truncate(@task.description, length: 100) %></p>
        </div>



          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@task.created_at) %> ago, 
            edited <%= time_ago_in_words(@task.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<%if @comments.present? %>
    <div id="page-content">
    <h1 class="text-center mt-4">Listing all comments</h1>
    <div class="container">
    <div id="comment-form" style="display: none;">
    <%= form_with model: Comment.new, url: task_comments_path(@task), method: :post do |form| %>
    <%= form.text_area :content, class: "form-control", placeholder: "Enter comment" %>
    <%= form.submit "Add Comment", class: "btn btn-outline-info" %>
    <% end %>
    </div>
    <button id="show-comment-form" class="btn btn-outline-info">Add Comment</button>
    </br>

<% @comments.each do |comment| %>
  <div class="card">
    <div class="card-body">
    <strong><%= comment.user.name %>: </strong>
      <%= comment.content %>

      <% if user_signed_in? && comment.user == current_user %>
      <%= link_to "Edit", edit_task_comment_path(@task, comment), class: "btn btn-outline-info" %>
      <%= button_to "Delete", task_comment_path(@task, comment), method: :delete, class: "btn btn-outline-danger" %>
    <% end %>
    </div>
  </div>
<% end %>
<%end%>


</div>
</div>



















