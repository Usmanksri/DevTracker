<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        <h5 class="card-title"><%= link_to project.name, project_path(project), class: "text-success" %></h5>
      </div>
      <div class="card-body">
        <%= project.description %>
        <%= render_attachments(project.description) %>
        <p class="card-text">Manager: <%= project.creator.name %></p>
        <p class="card-text">Members: <%= project.project_members.length %></p>
        <%= link_to "View", project_path(project), class: "btn btn-outline-success" %>

        <% if can? :update, project %>
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-outline-info" %>
        <% end %>
        <% if can? :destory, project %>
          <%= button_to "Delete", project_path(project), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(project.created_at) %> ago, edited <%= time_ago_in_words(project.updated_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
